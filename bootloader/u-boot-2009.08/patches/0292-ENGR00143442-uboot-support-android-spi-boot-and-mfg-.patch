+				CONFIG_ANDROID_UBIFS_PARTITION_NM,
+				CONFIG_ANDROID_CACHE_PARTITION_NAND,
+				CONFIG_ANDROID_RECOVERY_CMD_FILE);
 		break;
 	case SPI_NOR_BOOT:
 		return 0;
