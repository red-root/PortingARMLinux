 				 unsigned char reg, unsigned short *value)
 {
@@ -368,56 +407,56 @@ static void setFecDuplexSpeed(volatile fec_t *fecp, unsigned char addr,
 		} else {
 			printf("FEC: Link is down %x\n", val);
 		}
