-			else
-				dup_spd |= (HALF << 16);
-		}
-#elif defined(CONFIG_PHY_MICREL_KSZ9021)
-		ret = __fec_mii_read(fecp, addr, 0x1f, &val);
-		if (ret)
-			dup_spd = _100BASET | (FULL << 16);
-		else {
-			if (val & (1 << 6))
-				dup_spd = _1000BASET;
-			else if (val & (1 << 5))
-				dup_spd = _100BASET;
-			else
-				dup_spd = _10BASET;
-			if (val & (1 << 3))
-				dup_spd |= (FULL << 16);
-			else
-				dup_spd |= (HALF << 16);
-		}
-#else
-		ret = __fec_mii_read(fecp, addr, PHY_BMSR, &val);
-		if (ret)
-			dup_spd = _100BASET | (FULL << 16);
-		else {
-			if (val & (PHY_BMSR_100TXF | PHY_BMSR_100TXH | PHY_BMSR_100T4))
-				dup_spd = _100BASET;
